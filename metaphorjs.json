{
    "version": "0.1.6",
    "description": "MetaphorJs animation engine",

    "push": [
        "github"
    ],


    "docs": {
        "": {
            "out": "docs",
            "renderer": "default",
            "src": [
                "src/**"
            ],
            "itemSort": {
                "by": "name",
                "direction": "asc"
            },
            "includeExternal": false,
            "data": {
                "title": "MetaphorJs.animate",
                "version": "v0.1.6"
            }
        }
    },

    "build": {
        "standalone": {
            "wrap": true,
            "global": true,
            "target": "dist/metaphorjs.animate.js",
            "files": [
                "../metaphorjs/src/MetaphorJs.js",
                [
                    "src/metaphorjs.animate.js",
                    {
                        "as": "animate"
                    }
                ]
            ],
            "expose": [
                "animate",
                "stopAnimation"
            ]
        },
        "npm": {
            "target": "dist/metaphorjs.animate.npm.js",
            "compile": false,
            "wrap": {
                "exported": true,
                "deferred": true,
                "args": ["window"]
            },
            "files": [
                [
                    "src/metaphorjs.animate.js",
                    {
                        "as": "animate"
                    }
                ]
            ],
            "require": {
                "metaphorjs-promise": "Promise"
            },
            "omit": [
                "../metaphorjs-promise/src/metaphorjs.promise.js"
            ],
            "returns": "animate"
        },
        "amd": {
            "auto": false,
            "target": "dist/metaphorjs.animate.amd.js",
            "files": [
                [
                    "src/metaphorjs.animate.js",
                    {
                        "returnExports": true
                    }
                ]
            ],
            "omit": [
                "../metaphorjs-promise/src/metaphorjs.promise.js"
            ],
            "define": {
                "name": "metaphorjs-animate",
                "deps": {
                    "metaphorjs-promise": "Promise"
                }
            }
        }
    }
}